<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color_two"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/top_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@mipmap/search_logo"
        android:scaleType="centerCrop" />

    <TextView
        style="@style/text_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="中药材企业查询" />

    <RelativeLayout
        android:id="@+id/rel_search_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_register_edittext_gray"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_search_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业查询"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <EditText
        android:id="@+id/ed_search_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_register_edittext_gray"
        android:hint="请输入关键字"
        android:padding="8dp"
        android:singleLine="true" />

    <RelativeLayout
        android:id="@+id/rel_search_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_register_edittext_gray"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_search_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业类型"
            android:textColor="@android:color/black" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_search_commint"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button"
        android:text="提交"
        android:textColor="@android:color/white" />

</LinearLayout>

