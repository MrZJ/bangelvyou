<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/register_left_right_margin"
    android:paddingRight="@dimen/register_left_right_margin"
    android:paddingTop="@dimen/register_top_margin">

    <TextView
        android:id="@+id/tv_medicine_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="黄芪"
        android:textColor="#000000"
        android:textSize="@dimen/register_text_size" />

    <TextView
        android:id="@+id/tv_before_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="100"
        android:textColor="#000000"
        android:textSize="@dimen/register_text_size" />

    <EditText
        android:id="@+id/et_reality_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_register_edittext"
        android:maxLength="12"
        android:paddingBottom="5dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="5dp"
        android:textColor="#999999"
        android:textColorHint="#999999"
        android:textSize="@dimen/register_text_size" />
</LinearLayout>