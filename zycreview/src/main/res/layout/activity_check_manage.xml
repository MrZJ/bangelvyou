                    android:id="@+id/et_check_name"
                    style="@style/check_manage"
                    android:hint="检验名称" />

                <TextView
                    android:id="@+id/et_executive_standard"
                    style="@style/check_manage"
                    android:drawableRight="@mipmap/down_icon"
                    android:text="执行标准"
                    android:textColor="#000000"
                    android:focusableInTouchMode="false"/>

                <TextView
                    android:id="@+id/et_check_stockpile"
                    style="@style/check_manage"
                    android:drawableRight="@mipmap/down_icon"
                    android:text="贮藏条件"
                    android:textColor="#000000"
                    android:focusableInTouchMode="false"/>


                <TextView
                    android:id="@+id/et_check_time"
                    style="@style/check_manage"
                    android:drawableRight="@mipmap/down_icon"
                    android:text="检验时间"
                    android:textColor="#000000"
                    android:focusableInTouchMode="false"/>

                <TextView
                    android:id="@+id/et_check_person"
                    style="@style/check_manage"
                    android:drawableRight="@mipmap/down_icon"
                    android:text="检验人员"
                    android:textColor="#000000"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <TextView
