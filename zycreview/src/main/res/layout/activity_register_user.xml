<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color_two"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_main_color_two"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:text="企业基本信息"
                android:textColor="@color/top_bar_color"
                android:textSize="@dimen/register_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="90dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/register_left_right_margin"
                    android:background="@color/top_bar_color" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/register_left_right_margin"
                    android:layout_weight="1"
                    android:background="@color/divider_color" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:text="提示红色边框为必填项"
                android:textColor="#ff0000"
                android:textSize="@dimen/register_text_size" />

            <include
                android:id="@+id/et_firm_name"
                layout="@layout/register_edit_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_register_edittext">

                <TextView
                    android:id="@+id/tv_firm_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="企业类型"
                    android:textColor="#999999"
                    android:textSize="@dimen/register_text_size" />

            </RelativeLayout>

            <include
                android:id="@+id/et_firm_charter"
                layout="@layout/register_edit_text" />

            <EditText
                android:id="@+id/com_charge_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="企业法人"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />

            <EditText
                android:id="@+id/com_addr_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="企业地址"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />
            <TextView
                android:id="@+id/com_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="企业主体性质"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />
            <include
                android:id="@+id/upload_firm_charter"
                layout="@layout/register_add_image" />

            <include
                android:id="@+id/et_organization_code"
                layout="@layout/register_edit_text" />

            <include
                android:id="@+id/upload_organization_code"
                layout="@layout/register_add_image" />

            <include
                android:id="@+id/et_contact_person"
                layout="@layout/register_edit_text" />

            <include
                android:id="@+id/et_mobile_number"
                layout="@layout/register_edit_text" />

            <include
                android:id="@+id/et_cap_number"
                layout="@layout/register_edit_text" />

            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="电子邮件"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />

            <EditText
                android:id="@+id/fax_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="传真"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />

            <EditText
                android:id="@+id/gap_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="GAP编号"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />

            <EditText
                android:id="@+id/gmp_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="GMP编号"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />

            <EditText
                android:id="@+id/gsp_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="GSP编号"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />
            <EditText
                android:id="@+id/work_range_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="经营范围"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/register_text_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register_edittext"
                    android:drawableRight="@mipmap/down_icon"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp"
                    android:text="省"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register_edittext"
                    android:drawableRight="@mipmap/down_icon"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp"
                    android:text="市"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_county"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register_edittext"
                    android:drawableRight="@mipmap/down_icon"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp"
                    android:text="区"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:text="用户注册信息"
                android:textColor="@color/top_bar_color"
                android:textSize="@dimen/register_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="90dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/register_left_right_margin"
                    android:background="@color/top_bar_color" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/register_left_right_margin"
                    android:layout_weight="1"
                    android:background="@color/divider_color" />
            </LinearLayout>

            <include
                android:id="@+id/et_legal_person"
                layout="@layout/register_edit_text" />

            <EditText
                android:id="@+id/et_legal_person_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:inputType="textPassword"
                android:textSize="@dimen/register_text_size"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/et_legal_person_password_ag_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_register_edittext"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:inputType="textPassword"
                android:textSize="@dimen/register_text_size"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLines="1"/>
            <!--<include
                android:id="@+id/et_fax"
                layout="@layout/register_edit_text" />

            <include
                android:id="@+id/et_mail_box"
                layout="@layout/register_edit_text_gray" />

            <include
                android:id="@+id/et_manage_address"
                layout="@layout/register_edit_text" />

            <include
                android:id="@+id/et_mail_code"
                layout="@layout/register_edit_text_gray" />-->

            <Button
                android:id="@+id/bt_commit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="@dimen/register_top_margin"
                android:layout_marginLeft="@dimen/register_left_right_margin"
                android:layout_marginRight="@dimen/register_left_right_margin"
                android:layout_marginTop="@dimen/register_top_margin"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="@dimen/register_text_size" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/empty_view_mini"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#33222222"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/loading_layout_mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loading_img_mini"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_loading"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tip_text_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="loading"
                android:textColor="@color/location_tag_nomal"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/loading_layout_mini" />
    </RelativeLayout>
</RelativeLayout>
