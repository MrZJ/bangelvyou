<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color">

    <include
        android:id="@+id/notice_policy_search_top"
        layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notice_policy_search_top"
        android:background="@color/bg_main_color_two"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_seach_keyword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:hint="请输入搜索关键字..."
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btn_commint_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_button"
            android:text="搜索"
            android:textColor="#FFF9FF"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>
