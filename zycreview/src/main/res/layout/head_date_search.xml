<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_color_two">

    <TextView
        android:id="@+id/tv_head_search_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_left_right_margin"
        android:layout_marginTop="5dp"
        android:text="种植时间"
        android:textColor="#000000"
        android:textSize="@dimen/register_text_size" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_head_search_start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_left_right_margin"
            android:layout_marginRight="@dimen/register_left_right_margin"
            android:background="@drawable/bg_register_edittext_gray"
            android:drawableRight="@mipmap/down_icon"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="5dp"
            android:text="年/月/日"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="至"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="@dimen/register_text_size"/>

        <TextView
            android:id="@+id/tv_head_search_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_left_right_margin"
            android:layout_marginRight="@dimen/register_left_right_margin"
            android:background="@drawable/bg_register_edittext_gray"
            android:drawableRight="@mipmap/down_icon"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="5dp"
            android:text="年/月/日"
            android:textColor="#000000" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_head_search"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="@dimen/register_top_margin"
        android:layout_marginLeft="@dimen/register_left_right_margin"
        android:layout_marginRight="@dimen/register_left_right_margin"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:padding="5dp"
        android:text="查询"
        android:textColor="#ffffff"
        android:textSize="@dimen/register_text_size" />

</LinearLayout>