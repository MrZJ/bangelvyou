<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_color"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="药材名称"
            style="@style/ItemTextBlack"
            android:gravity="left"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_item_instock_info_medicname"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采收人:"
            style="@style/ItemTextBlack"
            android:singleLine="true"
            android:id="@+id/tv_item_instock_info_receiveuser"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采收重量:"
            style="@style/ItemTextBlack"
            android:singleLine="true"
            android:id="@+id/tv_item_instock_info_medicweight"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采收时间:"
            style="@style/ItemTextBlack"
            android:singleLine="true"
            android:id="@+id/tv_item_instock_info_instockdate"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_item_instock_info_instock"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"
        android:background="@color/top_bar_color"
        android:text="入库"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

</LinearLayout>