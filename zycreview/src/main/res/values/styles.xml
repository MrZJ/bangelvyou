<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_activity_close_exit</item>
    </style>

    <style name="Theme.Activity" mce_bogus="1" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/bg_welcome</item>
    </style>

    <style name="MatchWrapTv" parent="MatchWrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AutoWrapTv" parent="AutoWrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="UserName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_user_login">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="mine_list_text">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="notice_text">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_gray">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemTextBlack">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ItemTextGray">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="ItemTextGrayWithLine">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:background">@drawable/bg_instock_detail_textview</item>
    </style>

    <style name="text_search">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_manage">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_plant_detail">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_menushow</item>
        <item name="android:windowExitAnimation">@anim/pop_menuhide</item>
    </style>

    <style name="check_manage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/register_left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/register_left_right_margin</item>
        <item name="android:layout_marginTop">@dimen/register_left_right_margin</item>
        <item name="android:background">@drawable/bg_register_edittext</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">@dimen/register_text_size</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!--自定义动画样式-->
    <style name="Animation" />
    <style name="Animation.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_in_toast</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_out_toast</item>
    </style>

    <!--自定义吐司动画样式-->
    <style name="myToast" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
    </style>

    <!-- 自定义dialog -->
    <style
        name="CustomDialog"
        parent="android:style/Theme.Dialog">
        <item
            name="android:windowFrame">@null</item><!--边框 -->
        <item
            name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item
            name="android:windowIsTranslucent">true</item><!--半透明 -->
        <item
            name="android:windowNoTitle">true</item><!--无标题 -->
        <item
            name="android:windowBackground">@android:color/transparent</item><!--背景透明 -->
        <item
            name="android:backgroundDimEnabled">true</item><!--模糊 -->
    </style>
    <!-- 自定义dialog -->
</resources>
