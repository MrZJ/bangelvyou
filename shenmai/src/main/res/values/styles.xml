<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_activity_close_exit</item>
    </style>

    <style name="Theme.Activity" mce_bogus="1" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/bg_welcome</item>
    </style>

    <!--自定义动画样式-->
    <style name="Animation" />

    <style name="Animation.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_out</item>
    </style>

    <style name="Animation.pop" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
    <!--自定义吐司动画样式-->
    <style name="myToast" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
    </style>

    <!--滑动选项-->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPaddingTopBottom" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <!--该属性表示里面的TAB是否均分整个PagerSlidingTabStrip控件的宽,true是,false不均分,从左到右排列,默认false-->
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsTextSelectedColor" format="color"/>
        <!--缩放的最大值,0.3表示放大后最大是原来的0.3倍,默认未0.3-->
        <attr name="pstsScaleZoomMax" format="float"/>
        <attr name="pstsSmoothScrollWhenClickTab" format="boolean"/>
    </declare-styleable>

    <style name="GoodsName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="GoodsType">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="GoodsPrice">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="GoodsReback">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/rebackColor</item>
    </style>
    <style name="GoodsState">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/top_bar_color</item>
    </style>

    <style name="MyCheckBox1" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/my_check</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="GoodsOrderP">//商品排序标签选中样式
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bg_main_color</item>
        <!--<item name="android:background">@drawable/bg_list_order</item>-->
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="GoodsOrderN">//商品排序标签普通样式
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/back_color</item>
        <!--<item name="android:background">@drawable/bg_list_order_nomal</item>-->
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="mine_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mine_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
