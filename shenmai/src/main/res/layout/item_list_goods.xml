<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color">

    <ImageView
        android:id="@+id/img_item_list_goodimg"
        android:padding="10dp"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <LinearLayout
        android:padding="5dp"
        android:layout_toRightOf="@id/img_item_list_goodimg"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_list_goodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GoodsName"
            android:text="名字"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_item_list_goodtype"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GoodsType"
            android:text="型号"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_item_list_gooddes"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GoodsType"
            android:text="描述"
            android:singleLine="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_item_list_goodprice"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GoodsPrice"
                android:text="微价"
                android:singleLine="true"/>

            <TextView
                android:layout_below="@id/tv_item_list_goodprice"
                android:id="@+id/tv_item_list_goodreback"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GoodsPrice"
                android:text="佣金"
                android:singleLine="true"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@id/tv_item_list_goodprice"
                android:layout_toRightOf="@id/tv_item_list_goodreback"
                android:id="@+id/tv_item_list_goodstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GoodsState"
                android:text="有货"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/img_item_list_addshop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/tv_item_list_goodstate"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/add_to_shop"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>