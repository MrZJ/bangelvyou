<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lin_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/default_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="5dp"
            android:paddingTop="6dp"
            android:text="默认排序"
            style="@style/pop_text_style"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/price_up_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="5dp"
            android:paddingTop="6dp"
            android:text="按价格从低到高"
            style="@style/pop_text_style"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />

        <TextView
            android:id="@+id/price_down_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="5dp"
            android:paddingTop="6dp"
            android:text="按价格从高到低"
            style="@style/pop_text_style"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_other"
        android:layout_below="@id/lin_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#60000000"/>

</RelativeLayout>