<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_color"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/item_point_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称"
        android:textSize="14sp"
        android:singleLine="true"
        android:textColor="#333333"/>

    <TextView
        android:layout_below="@id/item_point_title"
        android:layout_marginTop="5dp"
        android:id="@+id/item_point_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-02-17"
        android:textColor="#666666"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_point_num"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FC6A01"
        android:textSize="12sp"/>

    <View
        android:layout_below="@id/item_point_date"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

</RelativeLayout>