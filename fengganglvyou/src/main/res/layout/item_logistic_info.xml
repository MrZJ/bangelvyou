<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_color"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textColor="#777777" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textColor="#2ebd58" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/status_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.75"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_logistic_info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="刚刚发布"
                    android:textColor="#B6B6B6"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_item_logistic_info_startads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/tv_item_logistic_info_time"
                    android:drawableLeft="@mipmap/car_start"
                    android:drawablePadding="5dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="起点"
                    android:textColor="#777777" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_logistic_info_endads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/car_end"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="终点"
                android:textColor="#777777" />

            <TextView
                android:id="@+id/tv_item_logistic_info_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/wuliu_liuyan"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="一分钟"
                android:textColor="#777777"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_logistic_info_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/car_local"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="100米"
                android:textColor="#B6B6B6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_item_logistic_info_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="￥29"
                android:textColor="#E60000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/get_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#FF9349"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="我要抢单"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>