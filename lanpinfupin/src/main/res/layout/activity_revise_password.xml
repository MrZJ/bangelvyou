<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color">

    <include
        android:id="@+id/revise_password_top"
        layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/revise_password_top"
        android:background="@color/bg_main_color_two"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_revise_password_old"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_register_edittext_gray"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edt_revise_password_new"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_register_edittext_gray"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_revise_password_commint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_button"
            android:text="提交"
            android:textColor="#FFF9FF"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
