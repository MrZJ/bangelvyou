<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dash="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/bg_main_color">

    <TextView
        android:id="@+id/tv_item_location_goods_title"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="特产推荐"
        style="@style/LocationItemTextBlack_18"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_item_location_goods_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:id="@+id/rel_item_location_goods_img_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_location_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LocationItemText_18"
                android:gravity="center_horizontal"
                android:text="商品名称"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_item_location_goods_price"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LocationItemText_14"
                android:text="商品价格"/>

            <TextView
                android:layout_below="@id/tv_item_location_goods_name"
                android:layout_above="@id/tv_item_location_goods_price"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:id="@+id/tv_item_location_goods_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LocationItemText_14"
                android:text="商品简介"
                android:ellipsize="end" />

        </RelativeLayout>

    </LinearLayout>

    <com.basulvyou.system.wibget.DashedLine
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        dash:lineColor= "@color/dash_line_color" />

</LinearLayout>
