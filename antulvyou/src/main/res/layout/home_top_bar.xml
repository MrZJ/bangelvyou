<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/home_top_color">

        <ImageView
            android:id="@+id/home_top_title"
            android:layout_width="78dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/home_logo" />


        <TextView
            android:id="@+id/home_top_title_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/home_top_title"
            android:layout_alignParentRight="true"
            android:background="@mipmap/home_input"
            android:drawableLeft="@mipmap/home_sousuo"
            android:drawablePadding="5dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_marginRight="14dp"
            android:text="@string/search_hint"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
</RelativeLayout>