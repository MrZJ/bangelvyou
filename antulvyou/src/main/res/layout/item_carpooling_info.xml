<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_color"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <com.basulvyou.system.wibget.CircleImageView
        android:id="@+id/img_item_carpooling_info_icon"
        android:layout_marginLeft="8dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/car_owner_icon"/>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_item_carpooling_info_gocar"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去拼车"
        android:textColor="#FF9600"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@mipmap/sx_orange"/>

    <LinearLayout
        android:layout_toRightOf="@id/img_item_carpooling_info_icon"
        android:layout_toLeftOf="@id/tv_item_carpooling_info_gocar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/tv_item_carpooling_info_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4月2日 12:00"
                android:textColor="#777777"
                android:singleLine="true"
                android:drawableLeft="@mipmap/car_date"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/tv_item_carpooling_info_startads"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点"
                android:singleLine="true"
                android:textColor="#777777"
                android:drawableLeft="@mipmap/car_start"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/tv_item_carpooling_info_endads"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点"
                android:textColor="#777777"
                android:singleLine="true"
                android:drawableLeft="@mipmap/car_end"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/tv_item_carpooling_info_time"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一分钟"
                android:textColor="#B6B6B6"
                android:singleLine="true"
                android:textSize="10sp"
                android:ellipsize="marquee"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/tv_item_carpooling_info_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三个座位"
                android:textColor="#777777"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/tv_item_carpooling_info_price"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥29"
                android:textColor="#E60000"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:textSize="18sp"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/tv_item_carpooling_info_dist"
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100米"
                android:textColor="#B6B6B6"
                android:singleLine="true"
                android:drawableLeft="@mipmap/car_local"
                android:drawablePadding="5dp"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>