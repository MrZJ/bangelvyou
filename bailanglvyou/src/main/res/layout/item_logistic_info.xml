<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_color"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="0.75">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_item_logistic_info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刚刚发布"
                    android:textColor="#B6B6B6"
                    android:singleLine="true"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/tv_item_logistic_info_time"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_item_logistic_info_startads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起点"
                    android:singleLine="true"
                    android:textColor="#777777"
                    android:drawableLeft="@mipmap/car_start"
                    android:drawablePadding="5dp"
                    android:ellipsize="marquee"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_logistic_info_endads"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点"
                android:textColor="#777777"
                android:singleLine="true"
                android:drawableLeft="@mipmap/car_end"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/tv_item_logistic_info_suggest"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一分钟"
                android:textColor="#777777"
                android:maxLines="2"
                android:drawableLeft="@mipmap/wuliu_liuyan"
                android:drawablePadding="5dp"
                android:ellipsize="marquee"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/tv_item_logistic_info_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100米"
                android:textColor="#B6B6B6"
                android:singleLine="true"
                android:drawableLeft="@mipmap/car_local"
                android:drawablePadding="5dp"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_item_logistic_info_price"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥29"
                android:textColor="#E60000"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:textSize="18sp"
                android:ellipsize="marquee"/>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要抢单"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="#FF9349"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>