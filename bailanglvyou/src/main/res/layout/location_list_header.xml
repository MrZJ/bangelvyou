<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:layout_weight="0.46">

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/location_food_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/loction_food"/>

            <LinearLayout
                android:layout_alignBottom="@id/location_food_img"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="#60000000"
                android:gravity="center_vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/location_food_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美食"
                    style="@style/LocationAdvTitleText_15"/>

                <TextView
                    android:id="@+id/location_food_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="非比寻常的韵味"
                    style="@style/LocationAdvTitleText_10"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/location_sleep_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/location_sleep"/>

            <LinearLayout
                android:layout_alignBottom="@id/location_sleep_img"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="#60000000"
                android:gravity="center_vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/location_sleep_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住宿"
                    style="@style/LocationAdvTitleText_15"/>

                <TextView
                    android:id="@+id/location_sleep_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="休息也是旅行的一部份"
                    style="@style/LocationAdvTitleText_10"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:layout_weight="0.54">

        <RelativeLayout
            android:layout_weight="0.24"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/location_news_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/location_news"/>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#60000000"
                android:paddingTop="5dp">

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/location_news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="1"
                    android:text="新闻"
                    style="@style/LocationAdvTitleText_15"/>

                <TextView
                    android:id="@+id/location_news_context"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/location_news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="1"
                    android:text="我们的声音"
                    style="@style/LocationAdvTitleText_10"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.41"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/location_view_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/location_view"/>

            <LinearLayout
                android:layout_alignBottom="@id/location_view_img"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="#60000000"
                android:gravity="center_vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/location_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="景点"
                    style="@style/LocationAdvTitleText_15"/>

                <TextView
                    android:id="@+id/location_view_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="与天空携手的地方"
                    style="@style/LocationAdvTitleText_10"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.35"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/location_live_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/location_live"/>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#60000000"
                android:paddingTop="5dp">

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/location_live_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="1"
                    android:text="体验"
                    style="@style/LocationAdvTitleText_15"/>

                <TextView
                    android:id="@+id/location_live_context"
                    android:layout_toLeftOf="@id/location_live_title"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="1"
                    android:text="在雪域高原流浪"
                    style="@style/LocationAdvTitleText_10"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
