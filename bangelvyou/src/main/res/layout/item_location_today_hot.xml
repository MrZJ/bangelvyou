<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:dash="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <View
        android:id="@+id/divider_today_hot"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_today_hot"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:background="@mipmap/home_list_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="热门推荐"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/title_text_color"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="@drawable/search_result_img_stroke">

            <ImageView
                android:id="@+id/img_today_hot"
                android:layout_width="82dp"
                android:layout_height="57dp"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_today_hot_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="雪域明珠"
                style="@style/SearchResultText_12"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_today_hot_des"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我看见过层波迭浪的大海，玩赏过水光潋滟的西湖，却从没看见过漓江这样的水。漓江的水真静啊，静得让你感觉不到它在流动；漓江的水真清啊，清得可以看见江底的沙石；漓江的水真绿啊，"
                android:maxLines="2"
                android:textSize="10sp"
                android:textColor="#666666" />

            <RelativeLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_today_hot_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-01-27"
                    style="@style/SearchResultText_10"/>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_today_hot_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/eye" />

                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/tv_today_hot_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        style="@style/SearchResultText_10" />

                    <ImageView
                        android:id="@+id/iv_today_hot_save"
                        android:layout_marginLeft="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/heart" />

                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/tv_today_hot_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        style="@style/SearchResultText_10" />

                    <ImageView
                        android:id="@+id/iv_today_hot_com"
                        android:layout_marginLeft="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/chart" />

                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/tv_today_hot_com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        style="@style/SearchResultText_10" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <com.yishangshuma.bangelvyou.wibget.DashedLine
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        dash:lineColor= "@color/dash_line_color" />

</LinearLayout>