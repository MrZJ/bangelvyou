<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_activity_close_exit</item>
    </style>

    <style name="Theme.Activity" mce_bogus="1" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/bg_welcome</item>
    </style>

    <!--自定义动画样式-->
    <style name="Animation" />
    <style name="Animation.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_out</item>
    </style>

    <!--自定义吐司动画样式-->
    <style name="myToast" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
    </style>

    <!--自定义选择框-->
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/my_checkbox</item>

        <item name="android:paddingLeft">18dp</item>

        <item name="android:maxHeight">15dp</item>

    </style>
</resources>
